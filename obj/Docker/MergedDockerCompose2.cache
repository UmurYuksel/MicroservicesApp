services:
  basket.api:
    build:
      context: D:\Micro Services\MicroservicesApp
      dockerfile: src/Basket/Basket.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Basket.API
      target: base
    container_name: basketapi
    depends_on:
      basketdb:
        condition: service_started
      rabbitmq:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ConnectionStrings:Redis: basketdb:6379
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      EventBus:HostName: rabbitmq
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages;/root/.nuget/fallbackpackages2
    image: basketapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages --additionalProbingPath
        /root/.nuget/fallbackpackages2  ""'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8001
      target: 80
    tty: true
    volumes:
    - D:\Micro Services\MicroservicesApp\src\Basket\Basket.API:/app:rw
    - C:\Users\hp\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\hp\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - /.aspnet/https:/root/.aspnet/https/:rw
    - C:\Users\hp\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Program Files (x86)\Microsoft Visual Studio\Shared\NuGetPackages:/root/.nuget/fallbackpackages:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages2:ro
    - C:\Users\hp\.nuget\packages:/root/.nuget/packages:ro
    - D:\Micro Services\MicroservicesApp:/src:rw
  basketdb:
    container_name: basketdb
    image: redis
    ports:
    - published: 6379
      target: 6379
    restart: always
  catalog.api:
    build:
      context: D:\Micro Services\MicroservicesApp
      dockerfile: src/Catalog/Catalog.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Catalog.API
      target: base
    container_name: catalogapi
    depends_on:
      catalogdb:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      CatalogDatabaseSettings:ConnectionString: mongodb://catalogdb:27017
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages;/root/.nuget/fallbackpackages2
    image: catalogapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages --additionalProbingPath
        /root/.nuget/fallbackpackages2  ""'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8000
      target: 80
    tty: true
    volumes:
    - D:\Micro Services\MicroservicesApp\src\Catalog\Catalog.API:/app:rw
    - C:\Users\hp\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\hp\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - /.aspnet/https:/root/.aspnet/https/:rw
    - C:\Users\hp\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Program Files (x86)\Microsoft Visual Studio\Shared\NuGetPackages:/root/.nuget/fallbackpackages:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages2:ro
    - C:\Users\hp\.nuget\packages:/root/.nuget/packages:ro
    - D:\Micro Services\MicroservicesApp:/src:rw
  catalogdb:
    container_name: catalogdb
    image: mongo
    ports:
    - published: 27017
      target: 27017
    restart: always
    volumes:
    - /site:/data/db:rw
  orderdb:
    container_name: orderdb
    environment:
      ACCEPT_EULA: "Y"
      SA_PASSWORD: SwN1234w567
    image: mcr.microsoft.com/mssql/server
    ports:
    - published: 1401
      target: 1433
  ordering.api:
    build:
      context: D:\Micro Services\MicroservicesApp
      dockerfile: src/Ordering/Ordering.API/Dockerfile
      labels:
        com.microsoft.created-by: visual-studio
        com.microsoft.visual-studio.project-name: Ordering.API
      target: base
    container_name: orderingapi
    depends_on:
      orderdb:
        condition: service_started
      rabbitmq:
        condition: service_started
    entrypoint: tail -f /dev/null
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_LOGGING__CONSOLE__DISABLECOLORS: "true"
      ConnectionStrings:OrderConnection: Server=orderdb;Database=OrderDb;User Id=sa;Password=SwN1234w567
      DOTNET_USE_POLLING_FILE_WATCHER: '1'
      EventBus:HostName: rabbitmq
      NUGET_FALLBACK_PACKAGES: /root/.nuget/fallbackpackages;/root/.nuget/fallbackpackages2
    image: orderingapi:dev
    labels:
      com.microsoft.visualstudio.debuggee.arguments: ' --additionalProbingPath /root/.nuget/packages
        --additionalProbingPath /root/.nuget/fallbackpackages --additionalProbingPath
        /root/.nuget/fallbackpackages2  ""'
      com.microsoft.visualstudio.debuggee.killprogram: /bin/sh -c "if PID=$$(pidof
        dotnet); then kill $$PID; fi"
      com.microsoft.visualstudio.debuggee.program: dotnet
      com.microsoft.visualstudio.debuggee.workingdirectory: /app
    ports:
    - published: 8002
      target: 80
    restart: on-failure
    tty: true
    volumes:
    - D:\Micro Services\MicroservicesApp\src\Ordering\Ordering.API:/app:rw
    - C:\Users\hp\vsdbg\vs2017u5:/remote_debugger:rw
    - C:\Users\hp\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - /.aspnet/https:/root/.aspnet/https/:rw
    - C:\Users\hp\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
    - C:\Program Files (x86)\Microsoft Visual Studio\Shared\NuGetPackages:/root/.nuget/fallbackpackages:ro
    - C:\Program Files\dotnet\sdk\NuGetFallbackFolder:/root/.nuget/fallbackpackages2:ro
    - C:\Users\hp\.nuget\packages:/root/.nuget/packages:ro
    - D:\Micro Services\MicroservicesApp:/src:rw
  rabbitmq:
    container_name: rabbitmq
    image: rabbitmq:3-management-alpine
    ports:
    - published: 5672
      target: 5672
    - published: 15672
      target: 15672
    restart: always
version: '3.4'